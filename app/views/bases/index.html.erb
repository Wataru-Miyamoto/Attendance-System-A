<% provide(:title, 'Base Index') %>
<% provide(:class_text, 'label-signup') %>
<% provide(:button_text, '拠点情報追加') %>
<h1>拠点情報一覧</h1>
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th>拠点番号</th>
          <th>拠点名</th>
          <th>拠点種類</th>
        </tr>
      </thead>
      
      <tbody>
        <% @base.each do |b| %>
        <tr>
          <td><%= link_to "修正", edit_basis_path(b), class: "btn btn-md btn-primary" %></td>
          <td><%= link_to "削除", basis_path(b), method: :delete, class: "btn btn-md btn-primary",
              data: { confirm:"削除してよろしいですか？" } %></td>
          <td><%= b.base_id %></td>
          <td><%= b.base_name %></td>
          <td><%= b.base_type %></td>
        </tr>
        <% end %>
      </tbody>
      
    </table>
    <%= link_to "拠点情報追加", new_basis_path, class: "btn btn-lg btn-primary" %>
  </div>
