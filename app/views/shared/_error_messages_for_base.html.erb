<% @base.each do |b| %>
  <% if b.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        入力エラーが<%= b.errors.count %>件ありました。
      </div>
      <ul>
      <% b.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>