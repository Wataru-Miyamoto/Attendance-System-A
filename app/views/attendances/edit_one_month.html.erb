<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <h1>勤怠編集画面</h1>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td>
                <%= $days_of_the_week[day.worked_on.wday] %>
                <% if day.worked_on.wday == 6 %>
                  <%= $days_of_the_week[6] = nil %>
                  <font color="Blue">土</font>
                <% end %> 
                <% if day.worked_on.wday == 0 %>
                  <%= $days_of_the_week[0] = nil %>
                  <font color="Red">日</font>
                <% end %>
                </td>
                         
             
              <% if current_user || (Date.current < day.worked_on) %>
                <td><%= attendance.time_select :started_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.time_select :finished_at, readonly: true, class: "form-control" %></td>
              <% else %>
                <td><%= attendance.time_select :started_at, class: "form-control" %></td>
                <td><%= attendance.time_select :finished_at, class: "form-control" %></td>
              <% end %> 
              <td><%= attendance.check_box :edit_one_month_check, {:checked => false}, 0 %></td>
              <td>
                <% if day.started_at.present? && day.finished_at.present? %>
                  <%= working_times(day.started_at, day.finished_at) %>
                <% end %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td><%= select :user, :name, @superiors, :prompt => "選択してください", class: "form-control" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="row, center">
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-md btn-primary" %><%= f.submit "編集を保存する", class: "btn btn-md btn-primary" %>
  </div>
<% end %>