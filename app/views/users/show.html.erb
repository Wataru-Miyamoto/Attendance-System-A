<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        <%= l(@first_day, format: :middle) %>　時間管理表
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>指定勤務開始時間　<%= format_basic_info(@user.designated_work_start_time) %><br>
          指定勤務終了時間　<%= format_basic_info(@user.designated_work_end_time) %></td>
      <td colspan="2">基本時間　<%= format_basic_info(@user.basic_time) %></td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td>出勤日数<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="hover">
  <% if current_user.superior? %>
    <%= link_to "【所属長承認申請のお知らせ】", "#" %><br>
    <%= link_to "【勤怠変更申請のお知らせ】", "#" %><br>
    <%= link_to "【残業申請のお知らせ】", "#" %>
  <% end %>
</div>

<div class="btn-users-show">
    
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "CSV入力", "#", class: "btn btn-primary" %><br>
    <%= link_to "勤怠修正ログ（承認済）", attendances_index_log_user_path(current_user), class: "btn btn-primary" %>
    
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "7">【実績】</th>
        <th colspan = "7">所定外勤務</th>

      </tr>
      <tr>
        <th colspan = "3">出社</th>
        <th colspan = "3">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "3">終了予定時間</th>
        <th rowspan = "2">時間外時間</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認印</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% (@attendances).each do |day| %>
        <tr>
          <td><%= link_to "残業申請", "#", class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          
          <td>
            <% if day.worked_on.wday == 6 %>
              <%= $days_of_the_week[6] = nil %>
              <font color="Blue">土</font>
            <% end %> 
            <% if day.worked_on.wday == 0 %>
              <%= $days_of_the_week[0] = nil %>
              <font color="Red">日</font>
            <% end %>
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at, format: :minute) if day.started_at.present? %></td>
          <td>
           <% if btn_text = attendance_state(day) %>
             <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
           <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :minute) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td></td>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="6"></td>
        <td>所属長承認　未<br>
          <button class="btn btn-block dropdown-toggle" type="button" id="dropdownMenu1" 
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  
            <span class="caret"></span><br>
          </button>
          <!--<%= link_to "申請", "#", class: "btn  btn-block btn-primary" %>-->
          
          <%= form_with model: @user, url: update_month_path(@user.id), method: :patch do |f| %>
            <% @date.each do |day| %>
              <%= fields_for "attendances[]", day do |af| %>
                <div class="form-group">
                  <% if @user.id == current_user.id %>
                    <!--一つ目id: value, 二つ目name: 表示用-->
                    <!--申請先上長のid(superior_id)を選択-->
                    <%= af.collection_select :superior_id, User.where(superior: true).where.not(id: current_user.id), :id, :name, {:include_blank => true}, {class: "form-control"} %>
                    <!--申請月の@first_dayを自動で渡す-->
                    <%= af.hidden_field :apply_month, :value => @first_day %>
                    <!--裏側でmonth_approval == "申請中"を渡したい-->
                    <%= af.hidden_field :month_approval, {value: "申請中"} %>
                    <!--裏側でmonth_check == falseにしたい-->
                    <% af.hidden_field :month_check, :value => "0" %>
                    <% raise %>
                  <% end %>
                </div>
              <% end %>
              <% break %>
            <% end %>
            <div class="btn-attendances-center">
              <% if @user.id == current_user.id %>
                <%= f.submit "申請", class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
        </td>
      </tr>
    </tfoot>    
  </table>
</div>
