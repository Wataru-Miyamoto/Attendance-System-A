<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
        <%= l(@first_day, format: :middle) %>　時間管理表
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>指定勤務開始時間　<%= format_basic_info(@user.designated_work_start_time) %><br>
          指定勤務終了時間　<%= format_basic_info(@user.designated_work_end_time) %></td>
      <td colspan="2">基本時間　<%= format_basic_info(@user.basic_time) %></td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td>出勤日数<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="hover">
  <!--上長で（自分かどうか）&未承認だったら申請のお知らせの表示・未承認のものがあれば文字は赤色-->
  <% if current_user.superior? %>
    <% unless @monthly_confirmation_count == nil %>
      <% if @monthly_confirmation_count > 0 %>
        <div class="border border-danger text text-danger">
          <%= link_to "【所属長承認申請のお知らせ】", attendances_monthly_confirmation_form_user_path(@user), remote: true, class: 'text text-danger' %>
            <div id="monthly-confirmation-form-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
  
          <!-- 所属長承認の件数をカウントする-->
            <%= @monthly_confirmation_count %>件のお知らせがあります
  
        </div>
      <% else %>
        <p>【所属長承認申請のお知らせ】</p><br>
      <% end %>
    <% end %>
    <%= link_to "【勤怠変更申請のお知らせ】", "#" %><br>
    <%= link_to "【残業申請のお知らせ】", "#" %>
  <% end %>
</div>

<div class="btn-users-show">
    
    <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "CSV出力", "#", class: "btn btn-primary" %><br>
    <%= link_to "勤怠修正ログ（承認済）", attendance_logs_path(@attendance, params: {id: @user.id, first_day: @first_day}), :style=>"color:white;", class: "btn btn-primary btn-sm" %>
    
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "7">【実績】</th>
        <th colspan = "7">所定外勤務</th>

      </tr>
      <tr>
        <th colspan = "3">出社</th>
        <th colspan = "3">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "3">終了予定時間</th>
        <th rowspan = "2">時間外時間</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認印</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% (@attendances).each do |day| %>
        <tr>
          <td><%= link_to "残業申請", attendances_update_overtime_form_user_path(@user), remote: true, :style=>"color:white;", class: "btn btn-sm btn-primary" %>
            <div id="overwork-form-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          
          <td>
            <% if day.worked_on.wday == 6 %>
              <%= $days_of_the_week[6] = nil %>
              <font color="Blue">土</font>
            <% end %> 
            <% if day.worked_on.wday == 0 %>
              <%= $days_of_the_week[0] = nil %>
              <font color="Red">日</font>
            <% end %>
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at, format: :minute) if day.started_at.present? %></td>
          <td>
           <% if btn_text = attendance_state(day) %>
             <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
           <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :minute) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td></td>
        <td colspan="2"></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="6"></td>
        <td class="table-body">所属長承認　未
          <%= form_with url: attendances_monthly_confirmation_user_path(@user), method: :patch do %>
            <%= select :user, :name, @superiors, :prompt => "選択してください" %>
            <%= hidden_field_tag :date, @first_day %>
            <%= hidden_field_tag :user_id, @user.id %>
            <%= submit_tag("申請", class: "btn btn-primary btn-block btn-sm")%>
          <% end %>
        </td>
      </tr>
    </tfoot>    
  </table>
</div>
